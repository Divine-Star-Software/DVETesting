{
  "references": [
    { "path": "../core" },
    { "path": "../screen" },
    { "path": "../io" }
  ],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "../",
    "rootDirs": [],
    "composite": true,
    "types": ["starcom", "divine-binary-object", "dve-plugins-player"],
    "outDir": "../../compiled/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "",
    "paths": {
      "@data/*": ["../core/data/*"],
      "@core/*": ["../core/*"],
      "@client/*": ["../client/*"],
      "@screen/*": ["../screen/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
