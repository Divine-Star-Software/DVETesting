{
  "references": [
    { "path": "../core" },
    { "path": "../screen" },
    { "path": "../assets" },
    { "path": "../audio" },
    { "path": "../io" },
    { "path": "../commands" },
    { "path": "../databases" },
    { "path": "../system" }
  ],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "../",
    "rootDirs": [],
    "composite": true,
    "types": [
      "crystal-compressor",
      "simloop",
      "divine-binary-object",
      "divine-voxel-engine",
      "dve-plugins-iwg",
      "dve-plugins-physics",
      "crystalline-state",
      "dve-plugins-player"
    ],
    "outDir": "../../compiled/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@data/*": ["../core/data/*"],
      "@clientData/*": ["../core/data/client/*"],
      "@sharedData/*": ["../core/data/shared/*"],
      "@core/*": ["../core/*"],
      "@screen/*": ["../screen/*"],
      "@assets/*": ["../assets/*"],
      "@audio/*": ["../audio/*"],
      "@commands/*": ["../commands/*"],
      "@databases/*": ["../databases/*"],
      "@state/*": ["./state/*"],
      "@client/*": ["./*"],
      "@system/*": ["../system/*"],
      "@gen/*": ["../core/Gen/*"]

    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": false
  }
}
