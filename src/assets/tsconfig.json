{
  "references": [
    { "path": "../core" },
    { "path": "../screen" },
    { "path": "../io" }
  ],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "../",
    "rootDirs": [],
    "composite": true,
    "types": ["divine-audio-engine","divine-voxel-engine"],
    "outDir": "../../compiled/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "",
    "paths": {
      "@data/*": ["../core/data/*"],
      "@clientData/*": ["../core/data/client/*"],
      "@sharedData/*": ["../core/data/shared/*"],
      "@core/*": ["../core/*"],
      "@screen/*": ["../screen/*"],
      "@assets/*": ["../assets/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
